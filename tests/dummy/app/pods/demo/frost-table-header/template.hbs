<div class='frost-demo-api'>
  <div class='frost-demo-title'>
    API
  </div>
  <div class='frost-demo-snippet'>
    {{code-snippet name='table-header-api.hbs'}}
  </div>
</div>
<div class='frost-demo-live'>
  <div class='frost-demo-title'>
    Live demo
  </div>
  <div class='frost-demo-snippet'>
    {{code-snippet name='table-header.hbs'}}
  </div>
  <div class='frost-demo-launch'>
    {{! BEGIN-SNIPPET table-header }}
    <table class='frost-table'>
      {{frost-table-header
        columns=(array
          (hash
            label='Name'
            propertyName='name'
            category='Identification'
          )
          (hash
            label='Real Name'
            propertyName='realName'
            category='Identification'
          )
          (hash
            label='Universe'
            propertyName='universe'
          )
        )
        hook='myTableHeader'

        onCallback=(action 'dispatchNotification')
      }}
    </table>
    {{! END-SNIPPET }}
  </div>
</div>
