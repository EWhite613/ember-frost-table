{{! Template for the frost-table-cell component }}
{{#if cellRenderer}}
  {{! When we rendered our row, it already bound our column indexas a parameter for the callback handler. }}
  {{component cellRenderer
    callbackDispatch=(action 'handleCallback')
    colIndex=colIndex
    hook=(concat hookPrefix '-renderer')
    hookQualifiers=hookQualifiers
    item=item
    value=value
  }}
{{else}}
  {{value}}
{{/if}}
